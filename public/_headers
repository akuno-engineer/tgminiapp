# Cache images for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache audio files for 1 year
/sfx/*
  Cache-Control: public, max-age=31536000, immutable

# Cache static assets
*.js
  Cache-Control: public, max-age=31536000, immutable

*.css
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML files
*.html
  Cache-Control: no-cache, no-store, must-revalidate 